@namespace Jumpeno.Client.Components

@inherits BasicComponent

<DocTitle Value="@I18N.T("Registration")" />

<div class="register-form">
    @if (!Success) {
        <div class="register-box">
            <Heading1 Class="register-heading" Size="TEXT_SIZE.L">@I18N.T("Registration")</Heading1>
            <div class="register-inputs">
                <InputField ViewModel="VMEmail" Name="email" Label="@I18N.T("Email")" Size="FORM_SIZE.M" Align="FORM_ALIGN.CENTER" Autocomplete />
                <InputField ViewModel="VMPlayerName" Name="name" Label="@I18N.T("Player name")" Size="FORM_SIZE.M" Align="FORM_ALIGN.CENTER" />
                <InputField ViewModel="VMPassword" Name="password" Label="@I18N.T("Password")" Size="FORM_SIZE.M" Align="FORM_ALIGN.CENTER" />
                <InputField ViewModel="VMConfirmPassword" Name="confirm password" Label="@I18N.T("Confirm password")" Size="FORM_SIZE.M" Align="FORM_ALIGN.CENTER" />
            </div>
            <Button Size="BUTTON_SIZE.M" OnClick="Register">
                <Text>@I18N.T("Register")</Text>
            </Button>
            <Paragraph Size="TEXT_SIZE.S" Class="register-block">
                @I18N.T("Have an account?")&nbsp;
                <WebLink
                    Size="TEXT_SIZE.S"
                    NoWrap
                    OnClick="() => VM.Show(LOGIN_FORM.USER)"
                    OnEnter="() => VM.Show(LOGIN_FORM.USER)"
                    Underline
                >
                    @I18N.T("Log in")
                </WebLink>
            </Paragraph>
        </div>
    } else {
        <div class="register-success-box">
            <Heading1 Class="register-heading" Size="TEXT_SIZE.L">@I18N.T("Registration successful.")</Heading1>
            <AntIcon Type="check-circle" Theme="outline" Class="register-icon" />
            <div class="activation-box">
                <Paragraph Class="activation-text">@I18N.T("In order to play, account must be activated!")</Paragraph>
                <Paragraph Class="activation-text-info">@I18N.T("Activation link was sent to your email address.")</Paragraph>
                <Paragraph Class="activation-text-info">(@I18N.T("You can always ask for new one in profile."))</Paragraph>
            </div>
            <WebLink
                Size="TEXT_SIZE.S"
                NoWrap
                OnClick="() => VM.Show(LOGIN_FORM.USER)"
                OnEnter="() => VM.Show(LOGIN_FORM.USER)"
                Class="register-redirect"
            >
                <AntIcon Type="login" Theme="outline" Class="icon-login" />&nbsp;@I18N.T("Log in")&nbsp;
            </WebLink>
        </div>
    }
</div>
