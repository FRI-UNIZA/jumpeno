@namespace Jumpeno.Client.Components

@inherits BasicComponent

<style>
    /* Keyframes ----------------------------------------------------------------------------------------------------------------------- */
    @@keyframes server-page-loader-show {
        0% { opacity: 1; transform: scale(1); }
        100% { opacity: 0; transform: scale(1.6); }
    }

    @@keyframes server-page-loader-spinner {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Styles -------------------------------------------------------------------------------------------------------------------------- */
    #server-page-loader {
        /* Position: */
        position: fixed;
        z-index: var(--theme-z-index-server-page-loader, 1000001);
        /* Display: */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 24px;
        /* Size: */
        width: 100vw;
        height: 100vh;
        height: 100dvh;
        inset: 0;
        /* Style: */
        outline: none;
        /* Animations: */
        animation: none;
    }

    #server-page-loader .server-page-loader-indicator {
        /* Size: */
        --size: 56;
        /* Display: */
        flex-shrink: 0;
        /* Size: */
        width: calc(var(--size) * 1px);
        height: calc(var(--size) * 1px);
        /* Style: */
        border-radius: 50%;
        border: calc(var(--size) / 6 * 1px) solid;
        border-color: var(--background);
        border-right-color: var(--color);
        /* Animations: */
        animation: server-page-loader-spinner 1s infinite linear;
    }

    /* Styles [hidden] ----------------------------------------------------------------------------------------------------------------- */
    #server-page-loader.hidden {
        /* Animations: */
        animation: server-page-loader-show 300ms forwards;
    }

    /* Styles [stopped] ---------------------------------------------------------------------------------------------------------------- */
    #server-page-loader.stopped .server-page-loader-indicator {
        /* Display: */
        display: none;
    }

    /* Theme [loading][system-dark] ---------------------------------------------------------------------------------------------------- */
    body {
        background: #222222;
    }
    
    /* Theme [loading][system-light] --------------------------------------------------------------------------------------------------- */
    @@media (prefers-color-scheme: light) {
        body {
            background: #ffffff;
        }
    }

    /* Theme [dark] -------------------------------------------------------------------------------------------------------------------- */
    body.dark-theme #server-page-loader {
        /* Style: */
        background: rgb(42, 33, 56);
    }
    body.dark-theme #server-page-loader svg path {
        /* Style: */
        fill: rgb(236, 240, 241);
    }
    body.dark-theme #server-page-loader .server-page-loader-indicator {
        /* Style: */
        --color: rgb(255, 215, 0);
        --background: rgba(0, 0, 0, 0.45);
    }

    /* Theme [light] ------------------------------------------------------------------------------------------------------------------- */
    body.light-theme #server-page-loader {
        /* Style: */
        background: rgb(255, 255, 255);
    }
    body.light-theme #server-page-loader svg path {
        /* Style: */
        fill: rgb(83, 75, 96);
    }
    body.light-theme #server-page-loader .server-page-loader-indicator {
        /* Style: */
        --color: rgb(235, 195, 0);
        --background: rgba(0, 0, 0, 0.45);
    }
</style>
