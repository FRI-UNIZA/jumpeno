@namespace Jumpeno.Client.Components

<AuthView Roles="[ROLE.USER]">
    <div class="@CLASS">
        <DropDown Title="@I18N.T("User menu")">
            <DropDownButton>
                <Image URL="@Animation.GetURL(Auth.User.Skin)" Transparent Class="@CLASS_PROFILE_IMAGE" />
            </DropDownButton>
            <Options>
                <DropDownOption Label="@I18N.T("My profile")" Action="@new(OpenProfile)">
                    <AntIcon Type="setting" Theme="outline" Class="@CLASS_ICON" Style="font-size: 18px;" />
                    <DropDownOptionText>@I18N.T("My profile")</DropDownOptionText>
                </DropDownOption>
                <DropDownOption Label="@I18N.T("Log out")" Action="@new(LogOut)">
                    <AntIcon Type="logout" Theme="outline" Class="@CLASS_ICON" Style="margin-top: -1px;" />
                    <DropDownOptionText>@I18N.T("Log out")</DropDownOptionText>
                </DropDownOption>
            </Options>
        </DropDown>
    </div>

    <ProfileModal @ref="@ModalRef" />
</AuthView>
