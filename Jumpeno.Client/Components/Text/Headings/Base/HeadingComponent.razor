@namespace Jumpeno.Client.Components

@inherits TextSpacingComponent

@switch(Type) {
    case HEADING_TYPE.H1:
        <h1 class="@ComputeClass()" style="@Style">@ChildContent</h1>
    break;
    case HEADING_TYPE.H2:
        <h2 class="@ComputeClass()" style="@Style">@ChildContent</h2>
    break;
    case HEADING_TYPE.H3:
        <h3 class="@ComputeClass()" style="@Style">@ChildContent</h3>
    break;
    case HEADING_TYPE.H4:
        <h4 class="@ComputeClass()" style="@Style">@ChildContent</h4>
    break;
    case HEADING_TYPE.H5:
        <h5 class="@ComputeClass()" style="@Style">@ChildContent</h5>
    break;
    case HEADING_TYPE.H6:
        <h6 class="@ComputeClass()" style="@Style">@ChildContent</h6>
    break;
}
