@namespace Jumpeno.Client.Components

@{
    var url = URL.Url();
    var baseURL = URL.BaseUrl();
    var baseURLSlash = $"{baseURL}/";
    foreach (var lang in AppSettings.Language.Languages) {
        var langURL = $"{baseURL}/{lang}/";
        if (url == baseURLSlash || url == langURL) {
            foreach (var culture in AppSettings.Language.Languages) {
                <link rel="alternate" hreflang="@(culture)" href="@($"{baseURL}/{culture}/")" />
            }
            <link rel="alternate" hreflang="x-default" href="@baseURLSlash" />
            break;
        }
    }
}
